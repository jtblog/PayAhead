{
  "rules": {
    ".read": "true",
    ".write": "true",

    "industry": {
      ".read": "true",
      ".write": "true"
    },
    "users": {
      "$uid": {
        ".read": "true",
        ".write": "$uid === newData.child('uid').val()"
      }
    },
    "reports": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "authorization": {
      ".read": "true",
      ".write": "true"
    },
    "paystack": {
      ".read": "true",
      ".write": "false"
    },
    "vendors": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    /*
    "payments": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    },
    "customers": {
      "$uid": {
        ".read": "$uid === auth.uid",
        ".write": "$uid === auth.uid"
      }
    }*/
  }
}